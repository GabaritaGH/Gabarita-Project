datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts    Post[]
  comments Comment[]

  tests           Test[]
  questionAnswers questionAnswer[] // Relação inversa adicionada
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  subject   String
  content   String
  published Boolean  @default(false)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  postId    Int
  post      Post     @relation(fields: [postId], references: [id])
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Test {
  id       Int     @id @default(autoincrement())
  title    String
  area     String?
  authorId Int
  author   User    @relation(fields: [authorId], references: [id])

  answers questionAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tests")
}

model questionAnswer {
  id String @id @default(uuid())

  // Relacionamentos
  authorId Int
  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  testId Int?
  test   Test? @relation(fields: [testId], references: [id])

  // Dados da Resposta
  questionId     String   // ID da questão (vindo do JSON ou API externa)
  questionYear   Int?     // Opcional, útil para filtros
  selectedOption String   // A letra que ele marcou (ex: "A", "B")
  isCorrect      Boolean  // Se acertou ou não
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt


  @@unique([authorId, questionId])
}